<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingTop="4dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:visibility="gone"/>

    <seiko.neiko.widget.ScaleImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/section2_read_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:id="@+id/section2_load_prev"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/section2_load_prev"/>

        <Button
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:id="@+id/section2_load_next"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/section2_load_next"/>

    </LinearLayout>

</LinearLayout>